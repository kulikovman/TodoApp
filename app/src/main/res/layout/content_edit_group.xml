<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.kulikovman.todoapp.EditGroupActivity"
    tools:showIn="@layout/activity_edit_group">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:onClick="groupOptions"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/description_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                app:srcCompat="@drawable/ic_subject_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_title"
                    android:textColor="@color/optionTitleColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/description_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_without"
                    android:textColor="@color/optionTextColor"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/color_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:onClick="groupOptions"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/color_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                app:srcCompat="@drawable/ic_palette_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/color_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/color_title"
                    android:textColor="@color/optionTitleColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/color_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/color_not_set"
                    android:textColor="@color/optionTextColor"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
