<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_task_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/ripple_background"
              android:paddingBottom="18dp"
              android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_task_warning"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/ic_notifications_outline_24dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/item_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="12dp"
            android:text="13 сентября"
            android:textColor="@color/gray_4"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_task_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="12dp"
            android:text="Высокий"
            android:textColor="@color/gray_4"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_task_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Раз в месяц"
            android:textColor="@color/gray_4"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/item_task_color"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_2"/>

        <TextView
            android:id="@+id/item_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="20dp"
            android:text="Полностью доделать это приложение до конца ноября этого года"
            android:textColor="@color/gray_7"
            android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>